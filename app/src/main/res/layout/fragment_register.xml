<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="@android:color/transparent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="invisible"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.thilinas.twallpapers.customs.CustomButton
                    app:font="montserratBold"
                    android:background="@drawable/facebook_button"
                    android:soundEffectsEnabled="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:text="facebook"
                    android:paddingLeft="10dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.thilinas.twallpapers.customs.CustomButton
                    android:id="@+id/btn_gplus"
                    app:font="montserratBold"
                    android:background="@drawable/googleplus_button"
                    android:soundEffectsEnabled="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_google_plus"
                    android:text="google"
                    android:paddingLeft="10dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.thilinas.twallpapers.customs.CustomButton
                    app:font="montserratBold"
                    android:background="@drawable/twitter_button"
                    android:soundEffectsEnabled="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_twitter"
                    android:text="twitter"
                    android:paddingLeft="10dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/mailRow"
                android:background="@color/trans_back"
                android:layout_gravity="center_horizontal"
                app:hintTextAppearance="@style/FloatingText"
                android:textColorHint="@color/medium_orchid"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">
                <com.thilinas.twallpapers.customs.CustomEditText
                    android:id="@+id/emailInput"
                    app:font="montserratRegular"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="16sp"
                    android:inputType="textWebEmailAddress"
                    android:singleLine="true"
                    android:hint="E-mail"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_gmail"
                    android:textColorHighlight="@color/medium_orchid"
                    android:textColorLink="@color/medium_orchid"
                    android:theme="@style/FloatingEditText"
                    android:textColorHint="@color/medium_orchid"
                    android:textColor="@color/purple_heart"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_edittext_height" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/passRow"
                android:background="@color/trans_back"
                android:layout_gravity="center_horizontal"
                app:hintTextAppearance="@style/FloatingText"
                android:textColorHint="@color/medium_orchid"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">
                <com.thilinas.twallpapers.customs.CustomEditText
                    android:id="@+id/passInput"
                    app:font="montserratRegular"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:hint="Password"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_padlock"
                    android:textColorHighlight="@color/medium_orchid"
                    android:textColorLink="@color/medium_orchid"
                    android:theme="@style/FloatingEditText"
                    android:textColorHint="@color/medium_orchid"
                    android:textColor="@color/purple_heart"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_edittext_height" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.thilinas.twallpapers.customs.CustomCheckBox
                    app:font="montserratRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:theme="@style/MyCheckBox"
                    android:textColor="@color/white"
                    android:text="Keep me signed in"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"/>
                <com.thilinas.twallpapers.customs.CustomButton
                    app:font="montserratBold"
                    android:id="@+id/btn_reg"
                    android:text="Sign Up"
                    android:background="@drawable/orange_button"
                    android:soundEffectsEnabled="true"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.thilinas.twallpapers.customs.CustomButton
        app:font="montserratBold"
        android:id="@+id/btn_login"
        android:text="Already have an account? Sign In Now"
        android:background="@drawable/back_trans_button"
        android:soundEffectsEnabled="true"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="71.67dp"/>
</LinearLayout>
