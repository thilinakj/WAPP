<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="20dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/layout_curve"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.thilinas.twallpapers.customs.CustomTextView
                app:font="karlaBold"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/purple_heart_2"
                android:text="Forgot your password?"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/dismiss"
                android:layout_gravity="right|top"
                android:src="@drawable/ic_clear_black_24dp"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="@dimen/close_btn_icons_length"
                android:layout_height="@dimen/close_btn_icons_length" />
        </LinearLayout>
        <com.thilinas.twallpapers.customs.CustomTextView
            app:font="karlaRegular"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="top|left"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Enter your E-mail to reset the password."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/mailRowF"
            android:background="@drawable/gray_button_curved"
            android:layout_gravity="center_horizontal"
            app:hintTextAppearance="@style/FloatingText"
            android:textColorHint="@color/medium_orchid"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <com.thilinas.twallpapers.customs.CustomEditText
                android:id="@+id/et_forget"
                app:font="montserratRegular"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="16sp"
                android:inputType="textWebEmailAddress"
                android:singleLine="true"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_gmail"
                android:textColorHighlight="@color/medium_orchid"
                android:textColorLink="@color/medium_orchid"
                android:theme="@style/FloatingEditText"
                android:textColorHint="@color/medium_orchid"
                android:textColor="@color/purple_heart"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edittext_height" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="5dp"/>
            <com.thilinas.twallpapers.customs.CustomButton
                android:enabled="false"
                app:font="montserratBold"
                android:id="@+id/buttonSend"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textColor="@color/white"
                android:background="@drawable/orange_button_curved"
                android:textAllCaps="false"
                android:text="Comment" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>