<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thilinas.twallpapers.activities.MyProfileActivity">
    <ImageView
        android:id="@+id/imgB"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.thilinas.twallpapers.customs.CustomTextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:font="montserratBold"
                android:text="Hi!"
                android:textSize="20sp"
                android:id="@+id/txt_name"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
        </RelativeLayout>
        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_centerInParent="true"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:id="@+id/pro_pic"
                    android:src="@drawable/ic_user"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    app:riv_corner_radius="110dp"
                    app:riv_border_width="5dp"
                    app:riv_border_color="@color/white_trans" />
            </RelativeLayout>
            <com.thilinas.twallpapers.customs.CustomTextView
                android:layout_marginBottom="20dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:font="montserratBold"
                android:text=""
                android:textSize="15sp"
                android:id="@+id/txt_mail"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_gmail"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <com.thilinas.twallpapers.customs.CustomButton
                    android:visibility="gone"
                    android:onClick="onClick"
                    app:font="montserratBold"
                    android:id="@+id/btn_ads"
                    android:text="ads"
                    android:background="@drawable/back_trans_button"
                    android:soundEffectsEnabled="true"
                    android:layout_marginBottom="@dimen/profile_list_btn_margin_bottom"
                    android:paddingTop="@dimen/profile_list_btn_padding"
                    android:paddingBottom="@dimen/profile_list_btn_padding"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.thilinas.twallpapers.customs.CustomButton
                    android:onClick="onClick"
                    app:font="montserratBold"
                    android:id="@+id/btn_c_pass"
                    android:text="Change Password"
                    android:background="@drawable/back_trans_button"
                    android:soundEffectsEnabled="true"
                    android:layout_marginBottom="@dimen/profile_list_btn_margin_bottom"
                    android:paddingTop="@dimen/profile_list_btn_padding"
                    android:paddingBottom="@dimen/profile_list_btn_padding"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.thilinas.twallpapers.customs.CustomButton
                    android:onClick="onClick"
                    app:font="montserratBold"
                    android:id="@+id/btn_r_acc"
                    android:text="Remove Account"
                    android:background="@drawable/back_trans_button"
                    android:soundEffectsEnabled="true"
                    android:layout_marginBottom="@dimen/profile_list_btn_margin_bottom"
                    android:paddingTop="@dimen/profile_list_btn_padding"
                    android:paddingBottom="@dimen/profile_list_btn_padding"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <com.thilinas.twallpapers.customs.CustomButton
                    android:onClick="onClick"
                    app:font="montserratBold"
                    android:id="@+id/btn_s_out"
                    android:text="Sign Out"
                    android:background="@drawable/back_trans_button"
                    android:soundEffectsEnabled="true"
                    android:layout_marginBottom="@dimen/profile_list_btn_margin_bottom"
                    android:paddingTop="@dimen/profile_list_btn_padding"
                    android:paddingBottom="@dimen/profile_list_btn_padding"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
